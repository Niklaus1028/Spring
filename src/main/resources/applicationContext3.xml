<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
"
>
    <!--基于构造方法的注入-->
    <bean id="student" class="cn.tedu.beans.Student">
        <constructor-arg index="0" name="id" value="1"></constructor-arg>
        <constructor-arg index="1" name="name" value="xx"></constructor-arg>
        <constructor-arg index="2" name="dog" ref="dog"></constructor-arg>
    </bean>
    <bean id="dog" class="cn.tedu.beans.Dog"></bean>
</beans>